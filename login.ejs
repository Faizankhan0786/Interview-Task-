    .root{
    display: flex;
    justify-content: center;
    align-items: center;
    background-color:white;
    height: auto;
    }
    .subdiv{
     width: 600px;
     height: auto;
    margin-top: 20px;
    background-color: white;
    padding: 25px;
    border-radius: 10px;
    border: 1px solid black
    }
